                },
                {
                    text: "Beasts ferocious with hunger will cross the rivers, The greater part of the battlefield will be against Hister. Into a cage of iron will the great one be drawn, When the child of Germany observes no law.",
                    options: [
                        { text: "The rise and fall of Adolf Hitler", correct: true },
                        { text: "The invasion of Poland", correct: false },
                        { text: "The Battle of Stalingrad", correct: false },
                        { text: "The Normandy landings", correct: false }
                    ],
                    explanation: "This quatrain contains 'Hister,' remarkably similar to 'Hitler.' Many believe it predicted Hitler's rise and the events of World War II."
                }
            ];
            
            let currentQuestionIndex = 0;
            let score = 0;
            
            const prophecyText = document.getElementById('prophecy-text');
            const optionsContainer = document.getElementById('options-container');
            const feedbackElement = document.getElementById('feedback');
            const nextButton = document.getElementById('next-btn');
            const scoreElement = document.getElementById('score');
            const currentQuestionElement = document.getElementById('current-question');
            const totalQuestionsElement = document.getElementById('total-questions');
            const prophecyNumberElement = document.getElementById('prophecy-number');
            const gameArea = document.getElementById('game-area');
            const endScreen = document.getElementById('end-screen');
            const finalScoreElement = document.getElementById('final-score');
            const finalTotalElement = document.getElementById('final-total');
            const finalMessageElement = document.getElementById('final-message');
            const restartButton = document.getElementById('restart-btn');
            
            // Initialize the game
            function initGame() {
                shuffleArray(prophecies);
                
                totalQuestionsElement.textContent = prophecies.length;
                finalTotalElement.textContent = prophecies.length;
                
                displayQuestion();
                
                nextButton.addEventListener('click', handleNextButtonClick);
                restartButton.addEventListener('click', restartGame);
            }
            
            // Display the current question
            function displayQuestion() {
                const currentQuestion = prophecies[currentQuestionIndex];
                
                prophecyText.textContent = currentQuestion.text;
                prophecyNumberElement.textContent = currentQuestionIndex + 1;
                currentQuestionElement.textContent = currentQuestionIndex + 1;
                
                // Clear previous options
                optionsContainer.innerHTML = '';
                
                // Create shuffled options
                const shuffledOptions = [...currentQuestion.options];
                shuffleArray(shuffledOptions);
                
                // Add options to the container
                shuffledOptions.forEach(option => {
                    const optionElement = document.createElement('button');
                    optionElement.classList.add('option');
                    optionElement.textContent = option.text;
                    optionElement.addEventListener('click', () => handleOptionClick(option, optionElement));
                    optionsContainer.appendChild(optionElement);
                });
                
                // Hide feedback and disable next button
                feedbackElement.style.display = 'none';
                nextButton.disabled = true;
            }
            
            // Handle option click
            function handleOptionClick(option, optionElement) {
                // Disable all options
                const options = document.querySelectorAll('.option');
                options.forEach(opt => opt.disabled = true);
                
                // Show feedback
                const currentQuestion = prophecies[currentQuestionIndex];
                feedbackElement.innerHTML = option.correct ? 
                    '<strong>Correct!</strong>' : 
                    '<strong>Incorrect!</strong>';
                feedbackElement.innerHTML += `<div class="explanation">${currentQuestion.explanation}</div>`;
                
                feedbackElement.className = 'feedback';
                feedbackElement.classList.add(option.correct ? 'correct' : 'incorrect');
                feedbackElement.style.display = 'block';
                
                // Highlight correct and incorrect options
                options.forEach(opt => {
                    const optionData = currentQuestion.options.find(o => o.text === opt.textContent);
                    if (optionData.correct) {
                        opt.classList.add('correct');
                    } else if (opt === optionElement && !option.correct) {
                        opt.classList.add('incorrect');
                    }
                });
                
                // Update score
                if (option.correct) {
                    score++;
                    scoreElement.textContent = score;
                }
                
                // Enable next button
                nextButton.disabled = false;
            }
            
            // Handle next button click
            function handleNextButtonClick() {
                currentQuestionIndex++;
                
                if (currentQuestionIndex < prophecies.length) {
                    displayQuestion();
                } else {
                    endGame();
                }
            }
            
            // End the game and show the final screen
            function endGame() {
                gameArea.classList.add('hidden');
                endScreen.classList.remove('hidden');
                
                finalScoreElement.textContent = score;
                
                // Generate final message based on score
                const percentage = (score / prophecies.length) * 100;
                let message = '';
                
                if (percentage >= 90) {
                    message = "Extraordinary! You have the gift of prophecy! Nostradamus himself would be impressed by your abilities to decipher his cryptic verses.";
                } else if (percentage >= 70) {
                    message = "Impressive! You have a strong intuition and understanding of historical connections. Perhaps you've studied the prophecies before?";
                } else if (percentage >= 50) {
                    message = "Well done! You have a good grasp of history and an ability to make connections between Nostradamus's words and historical events.";
                } else if (percentage >= 30) {
                    message = "A decent attempt! Nostradamus's prophecies are notoriously difficult to interpret. With more study, you could improve your understanding.";
                } else {
                    message = "Prophecies are challenging! Even scholars debate the true meanings of Nostradamus's quatrains. Perhaps a second reading of the stars is in order?";
                }
                
                finalMessageElement.textContent = message;
            }
            
            // Restart the game
            function restartGame() {
                currentQuestionIndex = 0;
                score = 0;
                scoreElement.textContent = score;
                
                shuffleArray(prophecies);
                
                endScreen.classList.add('hidden');
                gameArea.classList.remove('hidden');
                
                displayQuestion();
            }
            
            // Utility function to shuffle an array
            function shuffleArray(array) {
                for (let i = array.length - 1; i > 0; i--) {
                    const j = Math.floor(Math.random() * (i + 1));
                    [array[i], array[j]] = [array[j], array[i]];
                }
                return array;
            }
            
            // Start the game
            initGame();
        });
    </script>
</body>
</html>
